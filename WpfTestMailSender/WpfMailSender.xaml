<Window x:Class="WpfTestMailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="WpfMailSender" Height="350" Width="525">
    <Grid>
        <StackPanel Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Subject:</TextBlock>
            <TextBox x:Name="subjectTextBox" Margin="0,0,0,5"></TextBox>
            <TextBlock>Body:</TextBlock>
            <TextBox x:Name="bodyTextBox" Height="100" Margin="0,0,0,5"></TextBox>
            <TextBlock>Password:</TextBlock>
            <PasswordBox x:Name="passwordBox"  Margin="0,0,0,5" />
            <Button x:Name="btnSendEmail" Content="Отправить email" Click="btnSendEmail_Click" />
        </StackPanel>
    </Grid>
</Window>
